/*
7. Diseñar un programa que calcule la longitud de la circunferencia y el área del círculo de radio dado.
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	int radioIngresado, longitud, area;
	longitud=0;
	area=0;

	printf("Ingrese el radio de la circunferencia: ");
	scanf("%d", &radioIngresado);

	longitud=2*3,14*radioIngresado;
	area=3,14*radioIngresado*radioIngresado;

	printf("La longitud de la circunferencia es %dcm", longitud);
	printf("El area de la circunferencia es %dcm", area);
	return EXIT_SUCCESS;
}
